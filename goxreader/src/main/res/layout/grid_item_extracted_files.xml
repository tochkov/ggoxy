<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/library_elements_padding"
                                    android:transitionName="grid_file"
    >
    <!--card_view:cardCornerRadius="2dp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray_bkg"
        android:orientation="vertical">


        <com.goxapps.goxreader.viewutils.AspectRatioImageView
            android:id="@+id/grid_cover_frame"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            />

        <FrameLayout
            android:id="@+id/grid_shared_element"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/grid_file_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:padding="3dp"
                android:textColor="@color/light_gray_1"
                android:textSize="12sp"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>