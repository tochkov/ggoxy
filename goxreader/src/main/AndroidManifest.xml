<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goxapps.goxreader" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".FullReaderActivity"
            android:label="@string/title_activity_full_reader" >
        </activity>

        <service
            android:name=".filechooser.ExtractFilesService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".filechooser.FileChooserActivity"
            android:label="@string/title_activity_file_chooser" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>
